<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>netstandard2.0</TargetFramework>
		<RuntimeIdentifiers>linux-x64;osx-x64;win-x64</RuntimeIdentifiers>
  </PropertyGroup>

  <ItemGroup Condition="('$(RuntimeIdentifier)' == 'linux-x64') Or ('$(RuntimeIdentifier)' == '')">
    <ProjectReference Include="..\Foo.linux-x64\Foo.linux-x64.csproj" />
  </ItemGroup>
  <ItemGroup Condition="('$(RuntimeIdentifier)' == 'osx-x64') Or ('$(RuntimeIdentifier)' == '')">
    <ProjectReference Include="..\Foo.osx-x64\Foo.osx-x64.csproj" />
  </ItemGroup>
  <ItemGroup Condition="('$(RuntimeIdentifier)' == 'win-x64') Or ('$(RuntimeIdentifier)' == '')">
    <ProjectReference Include="..\Foo.win-x64\Foo.win-x64.csproj" />
  </ItemGroup>
</Project>
