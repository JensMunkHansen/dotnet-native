<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RuntimeIdentifier>linux-x64</RuntimeIdentifier>
    <RootNamespace>Foo.linux_x64</RootNamespace>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>

    <version>1.0.0-beta</version>
    <authors>Mizux</authors>
    <description>Simulate native wrapper of Foo/Native C++</description>
    <tags>native</tags>
    <!-- <NuspecFile>package.nuspec</NuspecFile> -->
  </PropertyGroup>
  <ItemGroup>
    <!-- Simulate native swig wrapper depending on the .so -->
    <Compile Include="Native.cs" />
    <!-- Simulate native shared lib -->
    <Content Include="*.so">
      <PackagePath>runtimes/linux-x64/netstandard2.0/%(Filename).so</PackagePath>
      <Pack>true</Pack>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>
</Project>
